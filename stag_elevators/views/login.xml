<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="custom_login_template" name="STAG Login Template">

        <t t-call="web.login_layout">
            <t t-set="title">Login</t>

            <style>
                body {
                    background-color: #000 !important;
                }
                <!-- header, .o_main_navbar, .o_web_client &gt; header {
                    display: none !important;
                } -->
                
            </style>

            <div class="stag-login-background">
                <div class="stag-login-box">
                    <img src="/stag_elevators/static/src/img/stag-logo.png" class="stag-logo" alt="STAG Elevators"/>

                    <t t-if="error">
                        <div class="stag-error-box">
                            <t t-esc="error"/>
                        </div>
                    </t>
                    

                    <form method="post" action="/web/login">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                        <div class="form-group">
                            <input type="text" name="login" class="form-control" required="required" t-att-value="login" placeholder="Username"/>
                        </div>
                        <div class="form-group">
                            <input type="password" name="password" class="form-control" required="required" placeholder="Password"/>
                        </div>
                        <input type="hidden" name="redirect" value="/Dashboard"/>
                        <button type="submit" class="btn btn-primary btn-block mt-3">Login</button>
                    </form>
                </div>
            </div>
        </t>
    </template>
</odoo>
